            >

        </TextView>

        <ImageView
            android:id="@+id/i_guanlianguize"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/guanlian"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/i_yuce"
            app:layout_constraintRight_toLeftOf="@id/i_julei">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/i_guanlianguize"
            app:layout_constraintLeft_toLeftOf="@id/i_guanlianguize"
            app:layout_constraintRight_toRightOf="@id/i_guanlianguize"
            android:text="关联规则"
            android:textSize="12dp"
            android:textColor="@color/gray_3"
            >

        </TextView>

        <ImageView
            android:id="@+id/i_yuce"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/yuce"
            app:layout_constraintTop_toTopOf="@id/i_shouye"
            app:layout_constraintLeft_toRightOf="@id/i_guanlianguize"
            app:layout_constraintRight_toRightOf="parent">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/i_yuce"
            app:layout_constraintLeft_toLeftOf="@id/i_yuce"
            app:layout_constraintRight_toRightOf="@id/i_yuce"
            android:text="预测"
            android:textSize="12dp"
            android:textColor="@color/gray_3"
            >

        </TextView>

