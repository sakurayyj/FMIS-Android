    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/i_shouye"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shouye"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/i_julei">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/i_julei"
            app:layout_constraintLeft_toLeftOf="@id/i_julei"
            app:layout_constraintRight_toRightOf="@id/i_julei"
            android:text="聚类"
            android:textSize="12dp"
            android:textColor="@color/gray_3"
            >

        </TextView>

        <ImageView
            android:id="@+id/i_julei"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/julei"
            app:layout_constraintTop_toTopOf="@id/i_shouye"
            app:layout_constraintLeft_toRightOf="@id/i_shouye"
            app:layout_constraintRight_toLeftOf="@id/i_guanlianguize">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
